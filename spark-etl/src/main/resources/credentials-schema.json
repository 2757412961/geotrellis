{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "accumulo": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "zookeepers": {
            "type": "string"
          },
          "instance": {
            "type": "string"
          },
          "user": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "zookeepers",
          "instance",
          "user",
          "password"
        ]
      }
    },
    "cassandra": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "allowRemoteDCsForLocalConsistencyLevel": {
            "type": "boolean"
          },
          "localDc": {
            "type": "string"
          },
          "usedHostsPerRemoteDc": {
            "type": "integer"
          },
          "hosts": {
            "type": "string"
          },
          "replicationStrategy": {
            "type": "string"
          },
          "replicationFactor": {
            "type": "integer"
          },
          "user": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "allowRemoteDCsForLocalConsistencyLevel",
          "localDc",
          "usedHostsPerRemoteDc",
          "hosts",
          "replicationStrategy",
          "replicationFactor",
          "user",
          "password"
        ]
      }
    },
    "s3": {
      "type": "array",
      "items": {}
    },
    "hadoop": {
      "type": "array",
      "items": {}
    }
  },
  "required": [
    "accumulo",
    "cassandra",
    "s3",
    "hadoop"
  ]
}